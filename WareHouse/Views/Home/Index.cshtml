@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row" align="center">
        <h3><b>Warehouse</b> app is an application where you can make transactions ( <span style="color:#2eff66;">Import</span>, <span style="color:#ff3636;">Export</span> ) users will get live browser notification about transactions (Using <span style="color:#0026ff;font-weight:700;">SignalR</span>) please make sure you have enabled desktop notification for chrome</h3>
        <h4><b>Administrators</b> can add new products see the report by PRODUCT and DATE, export to excel</h4>
        <hr />
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-sm-4">
                <h3 style="text-align:center;">New Transaction</h3>
                <a href="/Order/Create">
                    <img class="main-icon" src="~/Images/transactions_actions.png" />
                </a>
            </div>
            if (User.IsInRole("Administrators"))
            {
                <div class="col-sm-4">
                    <h3 style="text-align:center;">Reports</h3>
                    <a href="/Report">
                        <img class="main-icon" src="~/Images/reports_icon.png" />
                    </a>
                </div>
            }
            <div class="col-sm-4">
                <h3 style="text-align:center;">Warehouse</h3>
                <a href="/Report/Warehouse">
                    <img class="main-icon" src="~/Images/warehouse_icon.png" />
                </a>
            </div>
        }
        else
        {
            <div class="row">
                <p>If you have an account please login</p>
                <input type="button" value="Log in" class="login-button" onclick="window.location.href='/Account/Login'" />
                <p>or</p>
                <input type="button" value="Register" class="login-button" onclick="window.location.href='/Account/Register'" />

            </div>
        }
    </div>
</div>
